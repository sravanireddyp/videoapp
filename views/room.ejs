<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>video app like zoom</title>
    <link rel="stylesheet" href="style.css">
    <script src="/socket.io/socket.io.js"></script>
    <script src=" https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src=" https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  
</head>
<body>
    <div class="header">
        <div class="logo">
            <div class="header__back">
            <i class="fas fa-angle-left"></i>
        </div>
        <h3>Video app like zoom</h3>
    </div>
    <div class="main">
        <div class="main__left">
            <div class="videos_group">
                <div id="video-grid">

                </div>
            </div>
            <div class="options">
                <div class="options_-left">
                    <div id="StopVideo" class="options__button">
                        <i class="fa fa-video-camera"></i>
                    </div>
                    <div id="muteVideo" class="options__button">
                        <i class="fa fa-microphone"></i>
                    </div>
                    <div id="showchat" class="options__button">
                        <i class="fa fa-comment"></i>
                    </div>

                </div>
                <div class="options__right">
                   <div id="inviteButton" class="options__button">
                       <i class="fas fa-user-plus"></i>
                   </div>
                </div>
            </div>
           
        </div>
        <div class="main__right">
            <div class="main__chat__window">
                <div class="messages">

                </div>
            </div>
            <div class="main__message_container">
                <input type="text" id="chat_message" autocomplete="off" placeholder="Type Your Message Here">
                <div id="send" class="options__button">
                    <i class="fas fa fa-plus" aria-hidden="true"></i>

                </div>
            </div>
        </div>
    </div>
</div>
<script src="scrit.js"></script>
</body>

</html>